<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
    <h1 id="top-head">My Favorite BoardGames</h1>
    <div class="favorite-cards">
        <% favorite.forEach(game => { %>
            <div class="card" style="width: 32rem;">
                <img src="<%= game.image %>" class="card-img-top" id="fav-img">
                <div class="card-body">
                    <p class="card-text top-game-name"><%= game.name %></p>
                    <div class="fav-btns">
                        <a href="/boardgames/<%= game.id %>" class="btn btn-primary fav-card-btn" id="fav-card-btn">DETAILS</a>
                        <form class="fav-delete-btn-form" action="/favorite/<%= game.id %>?_method=DELETE" class="delete-form" method="POST">
                            <button class="fas fa-heart-broken fa-2x fav-delete-btn" type="submit"></button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<%- include('../partials/footer') %>