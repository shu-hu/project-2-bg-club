<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
    
    <div class="search-container">
        <form action="/boardgames/search" method="GET">
            <input id="search-input" type="text" placeholder="Type to search..." name="query">
            <button id="search-btn" type="submit"><i class="fa fa-search"></i></button>
        </form>
    </div>
    <section>
        <% if(input) { %> 
            <% if(searchResult.length) { %>
                <h3>Search Result</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Published Year</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% searchResult.forEach(function(game) { %>
                        <tr>
                            <td><%= game.name %></td>
                            <td><%= game.gamePublished %></td>
                            <% if (game.gameId) { %> 
                                <td><a href="/boardgames/<%= game.gameId %>">DETAILS</a></td>
                            <% } %> 
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <h3>Your search - <%= input %>  - did not match any documents.</h3>
                <ul>
                    Suggestions:
                    <li>Make sure all words are spelled correctly.</li>
                    <li>Try different keywords.</li>
                    <li>Try more general keywords.</li>
                </ul>
            <% } %>
        <% } %>   
    </section>
    <h2>Viewing History</h2>
    <% if (history?.length) { %>
        <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% history.slice(history.length - 10, history.length).forEach(function(viewed) { %>
            <tr>
                <td><%= viewed.name %></td>
                <td><img src="<%= viewed.image %>"></td>
                <td><%= viewed.createdAt.toLocaleString() %></td>
            </tr>
            <% }) %>
        </tbody>
        </table>
    <% } else { %>
        <h3>Your have not viewed any boardGame yet</h3>
    <% } %>

</main>

<%- include('../partials/footer') %>